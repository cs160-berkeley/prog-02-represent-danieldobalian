<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#303030"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.danieldobalian.represent.Detailed"
    tools:showIn="@layout/activity_detailed">

    <ImageView
        android:layout_width="134dp"
        android:layout_height="172dp"
        android:id="@+id/detailedImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/nameView"
        android:textColor="#2B98EC"
        android:textSize="55px"
        android:layout_below="@+id/detailedImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameView"
        android:text="New Text"
        android:id="@+id/background"
        android:textColor="#FFFFFF"
        android:textSize="34px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nameView"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameView"
        android:text="New Text"
        android:id="@+id/backgroundBody"
        android:textColor="#2B98EC"
        android:textSize="27px"
        android:layout_below="@+id/background"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameView"
        android:text="New Text"
        android:id="@+id/com"
        android:textColor="#FFFFFF"
        android:textSize="34px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/backgroundBody"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameView"
        android:text="New Text"
        android:id="@+id/comBody"
        android:textColor="#2B98EC"
        android:textSize="27px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameView"
        android:text="New Text"
        android:id="@+id/bills"
        android:textColor="#FFFFFF"
        android:textSize="34px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/comBody"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameView"
        android:text="New Text"
        android:id="@+id/billsBody"
        android:textColor="#2B98EC"
        android:textSize="27px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bills" />

    <Button
        android:layout_width="89dp"
        android:layout_height="28dp"
        android:text="Less Details"
        android:textSize="28px"
        android:textColor="#2B98EC"
        android:id="@+id/lessButton"
        android:background="@drawable/button_boarder"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
