<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#303030"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.danieldobalian.represent.zipCode"
    tools:showIn="@layout/activity_zip_code">


    <ImageView
        android:layout_width="129.75dp"
        android:layout_height="88.5dp"
        android:id="@+id/imageView"
        android:layout_marginTop="35dp"
        android:src="@drawable/america"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zipPrompt"
        android:text="Enter Zip Code"
        android:typeface="normal"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:paddingTop="40px" />

    <EditText
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/zipEnter"
        android:hint="Zip Code"
        android:textSize="16dp"
        android:clickable="true"
        android:windowSoftInputMode="stateVisible"
        android:backgroundTint="#303030"
        android:textCursorDrawable="@drawable/cursor"
        android:textColorHint="#888c91"
        android:textColor="#FFFFFF"
        android:maxLength="5"
        android:maxLines="1"
        android:paddingBottom="50px"
        android:gravity="center"
        android:layout_below="@+id/zipPrompt"
        android:layout_alignEnd="@+id/zipPrompt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Zip"
        android:id="@+id/zipInput"
        android:background="#2B98EC"
        android:textColor="#303030"
        android:paddingLeft="300px"
        android:paddingRight="300px"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/zipEnter"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
